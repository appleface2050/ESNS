<div class="help-block">系统新闻设置</div>
<div class="row">
    <div class="col-xs-12 col-sm-8">

        <div class="btn-group">
            <button class="btn" onclick="SetCompanyNewsIsActive(false);">
                <i class="icon-edit align-top bigger-125"></i>
                取消发布
            </button>
            <button class="btn btn-warning" onclick="SetCompanyNewsIsActive(true);">
                <i class="icon-edit align-top bigger-125"></i>
                发布
            </button>
            <button class="btn btn-warning" onclick="addNews();">
                <i class="icon-edit align-top bigger-125"></i>
                新建企业新闻
            </button>
        </div>
    </div>
    <div class="col-xs-12 col-sm-4 pull-right">
        <form ajax class="form-inline" id="query_sys_news_list">
            <select name="com_column_id" id="form-field-is_active" class="input-small" placeholder="是否已发布" style='width:150px'>
                <option value="" selected="selected">请选是否已发布</option>
                <option value="True" >已发布</option>
                <option value="False" >未发布</option>
            </select>
            <input id="search_keyword" type="text" class="" placeholder="新闻关键词" onkeydown="enterIn(event);">
            <%if(column_list!=null){%>
            <select name="com_column_id" id="form-field-company_column_id" class="input-small" placeholder="栏目" style='width:150px'>
            <option value="" selected="selected">全部内容</option>
            <%for(var i=0;i<column_list.length;i++){%>
                <option value="<%=column_list[i].flag%>"><%=column_list[i].name%></option>
            <%}%>
            </select>
            <%}%>
           <button type="button" onclick="orientation_query_company_news();" class="btn btn-info btn-sm">
                <i class="icon-search bigger-110"></i>
                查询
            </button>
        </form>
    </div>
</div>
<br>

<form id="sys_news_list">
    <div class="table-responsive">
        <table id="sample-table-1" class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th class="center">
                    <label>
                        <input type="checkbox" select_all class="ace"/>
                        <span class="lbl"></span>
                    </label>
                </th>
                <th>标题</th>
                <th>作者</th>
                <th class="hidden-480">
                    <i class="icon-time bigger-110 hidden-480"></i>
                    创建时间
                </th>
                <th class="hidden-480">
                    <i class="icon-time bigger-110 hidden-480"></i>
                    发布时间
                </th>
                <th>是否发布</th>
                <th>操作</th>
            </tr>
            </thead>

            <tbody>

            </tbody>
        </table>
    </div>
    <!-- /.table-responsive -->
</form>
