<form ajax callback="customer_service_update_column_callback" class="form-horizontal" role="form">
    <div class="form-group" input-group>
        <label class="col-sm-3 control-label no-padding-right" for="form-field-2"> 名称 </label>
        <div class="col-sm-9">
            <input name="name" input-check="required" id="form-field-2" value="<%=name%>"
                   class="col-xs-10 col-sm-5">
        </div>
    </div>

    <div class="form-group" input-group>
        <label class="col-sm-3 control-label no-padding-right" for="form-field-2"> 顺序</label>
        <div class="col-sm-9">
            <input name="index_num" input-check="required,int" id="" value="<%=index_num%>"
                   class="col-xs-10 col-sm-5">
        </div>
    </div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit">
                <i class="icon-ok bigger-110"></i>
                提交
            </button>
            <%if(id){%>
            <button class="btn btn-default" type="button" onClick="goNewsBack()">
                返回
            </button>
            <%}%>
            <input type="hidden" name="sys_column_id" value="<%=id%>">
        </div>
    </div>
</form>